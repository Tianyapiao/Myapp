<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.asus.algorithm">

    <!--调用系统图库所需的权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_data_struct"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_data_struct"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.BubbleSortActivity">


        </activity>

        <activity android:name=".activity.NavigateActivity"
                  android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.asus.algorithm.open"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>

        </activity>

        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="com.example.asus.algorithm.login"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>

        <activity android:name=".activity.RegisterActivity">
            <intent-filter>
                <action android:name="com.example.asus.algorithm.register"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>

        <activity android:name=".activity.ExerciseMain"/>

        <activity android:name=".activity.EditActivity">
            <intent-filter>
                <action android:name="com.example.asus.algorithm.save"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>

    </application>

</manifest>